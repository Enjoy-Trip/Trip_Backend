<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.trip.searchResult.mapper.SearchResultMapper">
	<resultMap type="SearchResultDto" id="searchResult">
		<result column="search_word" property="word" />
		<result column="search_count" property="count" />
	</resultMap>
	
	<select id="getSearchResultList" resultMap="searchResult">
		select 
			search_word,
			search_count
		from 
			search_result
	</select>
	
	<select id="getSearchResultCount" parameterType="String" resultType="int">
		select
			search_count
		from 
			search_result
		where
			search_word = #{word}
	</select>
	
	<insert id="createSearchResult" parameterType="String">
		insert into
			search_result (search_word)
		values
			(#{word})
	</insert>
	
	<update id="updateCount" parameterType="map">
		update
			search_result
		set
			search_result = search_result + 1
		where
			search_word = #{word}
	</update>
	
	<delete id="deleteSearchResult">
		delete from
			search_result
	</delete>
</mapper>